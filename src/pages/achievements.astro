---
import Layout from '../layouts/Layout.astro';
import PatentCard from '../components/PatentCard.astro';

type Status = "Granted" | "Registered";

const patents = [
  {
    title: "Alginate Dialdehyde Encapsulated Gold-Coated Carbon Nanodots with Ferrite Core",
    number: "545942",
    date: "2024-07",
    description: "Novel nanoformulation combining gold-coated carbon nanodots with ferrite core for enhanced therapeutic efficacy.",
    status: "Granted" as Status
  },
  {
    title: "Doxorubicin Loaded Alginate Dialdehyde Encapsulated Carbon-Coated Manganese Ferrite Nanodots",
    number: "431062",
    date: "2023-05",
    description: "Innovative drug delivery system utilizing manganese ferrite nanodots for targeted therapy.",
    status: "Granted" as Status
  },
  {
    title: "Multiple Copyrights",
    number: "Various",
    date: "2023-2024",
    description: "Portfolio of copyrights covering nanotechnology innovations and educational resources.",
    status: "Registered" as Status
  }
] as const;
---

<Layout title="Achievements">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <h1 class="text-3xl font-bold text-gray-900 mb-8">Patents & Copyrights</h1>
    
    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {patents.map((patent) => (
        <PatentCard {...patent} />
      ))}
    </div>
  </div>
</Layout>